<h1>Editar ticket</h1>

<% form_for(@ticket) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Nombre' %><br />
    <%= f.text_field :owner %>
  </p>
  <p>
    <%= f.label 'Tipo/Monto' %><br />
    <%= collection_select :ticket, :tickettype_id, Tickettype.all, :id, :name %>
  </p>
  <p>
    <%= f.label 'Pagado?' %><br />
    <%= f.check_box :paid %>
  </p>
  <p>
    <%= f.submit 'Actualizar' %>
  </p>
<% end %>

<%= link_to 'Vista Impresion', @ticket %> |
<%= link_to 'Volver', tickets_path %>

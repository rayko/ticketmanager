<h1>Lista de tipos de tickets</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Monto</th>
  </tr>

<% @tickettypes.each do |tickettype| %>
  <tr>
    <td><%=h tickettype.name %></td>
    <td><%=h tickettype.amount %></td>
    <td><%= link_to 'Mostrar', tickettype %></td>
    <td><%= link_to 'Editar', edit_tickettype_path(tickettype) %></td>
    <td><%= link_to 'Borrar', tickettype, :confirm => 'Esta Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo', new_tickettype_path %>
